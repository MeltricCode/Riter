<Window Background="{Binding Mode=OneWay, Source={StaticResource BgTransparent}}" x:Class="Riter.Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Riter.Main"
        mc:Ignorable="d"
        KeyDown="ShortcutKeyDown"
        UseLayoutRounding="True"
        Title="Riter"
        WindowStartupLocation="CenterScreen"
      
        WindowState="Maximized" d:DesignHeight="370" d:DesignWidth="602">
    <Grid x:Name="Layout">
        <InkCanvas x:Name="InkCanvas"
                   MoveEnabled="False"
                   ResizeEnabled="False"
                   Background="{x:Null}"
                   Cursor="Pen"
                   EditingModeInverted="EraseByPoint">
            <InkCanvas.DefaultDrawingAttributes>
                <DrawingAttributes FitToCurve="True"/>
            </InkCanvas.DefaultDrawingAttributes>
        </InkCanvas>
        <Canvas VerticalAlignment="Bottom" HorizontalAlignment="Center">
            <Grid x:Name="MainFrame" Width="400">
                <Button >
                    Hi
                </Button>
            </Grid>
        </Canvas>
    </Grid>
</Window>
