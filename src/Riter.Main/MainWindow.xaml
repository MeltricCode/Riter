<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Class="Riter.Main.MainWindow"
    mc:Ignorable="d" ResizeMode="NoResize" UseLayoutRounding="True" 
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    Background="{StaticResource NoneTransparent}" 
    AllowsTransparency="True" 
    WindowStyle="None">
    <Grid x:Name="Layout">
        <InkCanvas x:Name="MainInkCanvas" Background="{x:Null}" MoveEnabled="False" ResizeEnabled="False" Cursor="Pen" Margin="0,0,0,-0.333" EditingModeInverted="EraseByPoint">
            <InkCanvas.DefaultDrawingAttributes>
                <DrawingAttributes Color="#FFFF5656" FitToCurve="True" Height="5" IgnorePressure="False" IsHighlighter="False" StylusTip="Ellipse" StylusTipTransform="Identity" Width="5"/>
            </InkCanvas.DefaultDrawingAttributes>
        </InkCanvas>
        <Canvas>
            <Grid Canvas.Top="130" Canvas.Left="130" MinWidth="0">
                <Border CornerRadius="16" Background="#FFF" Padding="12,16"
                MaxWidth="460" HorizontalAlignment="Center" VerticalAlignment="Center"
                  BorderThickness="1">
                    <Border.Effect>
                        <DropShadowEffect Opacity="0.12" ShadowDepth="4" BlurRadius="4"/>
                    </Border.Effect>
                    <StackPanel >

                        <DockPanel Margin="0,0,0,8">
                            <StackPanel  Orientation="Horizontal" VerticalAlignment="Center">
                                <Border Padding="0,0,4,0" Height="36" Background="#F5F5F5" CornerRadius="4">
                                    <DockPanel>
                                        <Border Margin="0,0,0,0" Width="24" Height="24" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <ContentControl Content="{StaticResource Icon_Move}" />
                                        </Border>
                                        <TextBlock Text="Label text details" FontFamily="Inter" FontSize="12" VerticalAlignment="Center" />
                                    </DockPanel>
                                </Border>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">


                                <Border Margin="0,0,4,0"   Width="32" Height="32" CornerRadius="4" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <ContentControl Content="{StaticResource Icon_Setting}" />
                                </Border>
                                <Border   Width="32" Height="32" CornerRadius="4" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Button Style="{StaticResource IconButtonStyle}" Content="{StaticResource Icon_Close}" Click="BtnExit_Click" />
                                </Border>
                            </StackPanel>
                        </DockPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,12,0,0"  >
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0">
                                <Border Margin="0,0,2,0" Width="32" Height="32" CornerRadius="4" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <ContentControl Content="{StaticResource Icon_Pen}" />
                                </Border>
                                <Border Width="12" Height="32" CornerRadius="4" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <ContentControl Content="{StaticResource Icon_PenArrow}" />
                                </Border>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0">
                                <Border Margin="0,0,2,0" Width="32" Height="32" CornerRadius="4" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <ContentControl Content="{StaticResource Icon_Brush}" />
                                </Border>
                                <Border Width="12" Height="32" CornerRadius="4" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <ContentControl Content="{StaticResource Icon_BrushArrow}" />
                                </Border>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0">
                                <Border Background="#eee" Margin="0,0,2,0" Width="32" Height="32" CornerRadius="4" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <ContentControl Content="{StaticResource Icon_RoundedRectangle}" />
                                </Border>
                                <Border Width="12" Height="32" Background="#eee" CornerRadius="4" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <ContentControl Content="{StaticResource Icon_SquareArrow}" />
                                </Border>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0">
                                <Border Width="32" Height="32" CornerRadius="4" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <ContentControl Content="{StaticResource Icon_Text}" />
                                </Border>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0">
                                <Border Width="32" Height="32" CornerRadius="4" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <ContentControl Content="{StaticResource Icon_Undo}" />
                                </Border>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0">
                                <Border Width="32" Height="32" CornerRadius="4" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <ContentControl Content="{StaticResource Icon_Redo}" />
                                </Border>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0">
                                <Border Width="32" Height="32" CornerRadius="4" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <ContentControl Content="{StaticResource Icon_Eraser}" />
                                </Border>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0">
                                <Border Width="32" Height="32" CornerRadius="4" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <ContentControl Content="{StaticResource Icon_Delete}" />
                                </Border>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,0">
                                <Button Style="{StaticResource IconButtonStyle}" Content="{StaticResource Icon_Lock}" Click="BtnLock_Click" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Canvas>
    </Grid>
</Window>
