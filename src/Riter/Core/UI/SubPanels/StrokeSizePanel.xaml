<UserControl x:Class="Riter.Core.UI.SubPanels.StrokeSizePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="260" d:DesignWidth="550">
    <Grid Margin="0,12,0,4" Background="White">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Left" MinWidth="180" >
                <Label Content="Select Your Scale" Opacity="0.5"/>
                <Grid Margin="0,8,0,0" >
                    <Border Padding="6,6" CornerRadius="6" BorderThickness="0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="Transparent"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F1F1F1" />
                                        <Setter Property="Cursor" Value="Hand" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Grid >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                                <Label Content="1x" FontSize="12" />
                            </StackPanel>

                            <ContentControl Grid.Column="1" Width="24" Height="24" Content="{StaticResource Icon_Pen1x}" HorizontalAlignment="Right" />

                        </Grid>
                    </Border>
                </Grid>
                <Grid Margin="0,8,0,0">
                    <Border Padding="6,6" CornerRadius="6" BorderThickness="0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="Transparent"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F1F1F1" />
                                        <Setter Property="Cursor" Value="Hand" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                                <Label Content="2x"  FontSize="12" />
                            </StackPanel>
                            <ContentControl Grid.Column="1" Width="24" Height="24" Content="{StaticResource Icon_Pen2x}" HorizontalAlignment="Right" />
                        </Grid>
                    </Border>
                </Grid>
                <Grid Margin="0,8,0,0">
                    <Border Padding="6,6" CornerRadius="6" BorderThickness="0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="Transparent"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F1F1F1" />
                                        <Setter Property="Cursor" Value="Hand" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                                <Label Content="3x" FontSize="12" />
                            </StackPanel>

                            <ContentControl Grid.Column="1" Width="24" Height="24" Content="{StaticResource Icon_Pen3x}" HorizontalAlignment="Right" />

                        </Grid>
                    </Border>
                </Grid>
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Left" Margin="12,0,0,0">
                <Label Content="Select Your Color" Opacity="0.5"/>
                <StackPanel VerticalAlignment="Top" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,8,0,0">
                    <Border HorizontalAlignment="Left" Background="#FFFF5656" Margin="8,6,0,0" CornerRadius="6" BorderThickness="0" Height="60" Width="60">
                    </Border>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="8,0,0,0">

                        <StackPanel Margin="6,0,0,0" Orientation="Horizontal">
                            <Border BorderBrush="#EEEE" BorderThickness="1" Background="White" Margin="0,8,0,0" Padding="6,6" CornerRadius="12" Height="24" Width="24">
                            </Border>
                            <Border Background="#7853DE" Margin="6,8,0,0" Padding="6,6" CornerRadius="12" BorderThickness="0" Height="24" Width="24">
                            </Border>
                            <Border Background="#3BE1A9" Margin="6,8,0,0" Padding="6,6" CornerRadius="12" BorderThickness="0" Height="24" Width="24">
                            </Border>
                            <Border Background="#DFCF38" Margin="6,8,0,0" Padding="6,6" CornerRadius="12" BorderThickness="0" Height="24" Width="24">
                            </Border>
                            <Border Background="#D670C3" Margin="6,8,0,0" Padding="6,6" CornerRadius="12" BorderThickness="0" Height="24" Width="24">
                            </Border>
                            <Border Background="Yellow" BorderBrush="#DFCF38" Margin="6,8,0,0" Padding="6,6" CornerRadius="12" BorderThickness="1" Height="24" Width="24">
                            </Border>
                            <Border Background="#21124B" Margin="6,8,0,0" Padding="6,6" CornerRadius="12" BorderThickness="0" Height="24" Width="24">
                            </Border>
                        </StackPanel>
                        <StackPanel Margin="6,0,0,0" Orientation="Horizontal">
                            <Border Background="Black" Margin="0,8,0,0" Padding="6,6" CornerRadius="12" BorderThickness="0" Height="24" Width="24">
                            </Border>
                            <Border Background="#01C7FC" Margin="6,8,0,0" Padding="6,6" CornerRadius="12" BorderThickness="0" Height="24" Width="24">
                            </Border>
                            <Border Background="#FFB31B" Margin="6,8,0,0" Padding="6,6" CornerRadius="12" BorderThickness="0" Height="24" Width="24">
                            </Border>

                            <Border Background="#FF8C82" Margin="6,8,0,0" Padding="6,6" CornerRadius="12" BorderThickness="0" Height="24" Width="24">
                            </Border>
                            <Border Background="#FF552F" Margin="6,8,0,0" Padding="6,6" CornerRadius="12" BorderThickness="0" Height="24" Width="24">
                            </Border>
                            <Border Background="#909090" Margin="6,8,0,0" Padding="6,6" CornerRadius="12" BorderThickness="0" Height="24" Width="24">
                            </Border>

                            <Border Background="Green" Margin="6,8,0,0" Padding="6,6" CornerRadius="12" BorderThickness="0" Height="24" Width="24">
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>

</UserControl>

