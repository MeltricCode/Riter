<UserControl x:Class="Riter.Core.UI.SubPanels.KeyboardHotKeys"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewmodel="clr-namespace:Riter.ViewModel"
             d:DataContext="{d:DesignInstance Type=viewmodel:PalleteStateOrchestratorViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="290" d:DesignWidth="550">
    <Grid Margin="0,4,0,4" Background="White">

        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Column 1: Drawing Shortcuts -->
            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="0,4">
                <TextBlock Text="Drawing" Width="100"/>
                <TextBox Text="{Binding Drawing, UpdateSourceTrigger=PropertyChanged}" Padding="3" Width="120"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,4">
                <TextBlock Text="Erasing" Width="100"/>
                <TextBox Text="{Binding Erasing, UpdateSourceTrigger=PropertyChanged}"  Padding="3" Width="120"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" Margin="0,4">
                <TextBlock Text="Undo" Width="100"/>
                <TextBox Text="{Binding Undo, UpdateSourceTrigger=PropertyChanged}"  Padding="3" Width="120"/>
            </StackPanel>

            <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal" Margin="0,4">
                <TextBlock Text="Redo" Width="100"/>
                <TextBox Text="{Binding Redo, UpdateSourceTrigger=PropertyChanged}"  Padding="3" Width="120"/>
            </StackPanel>

            <StackPanel Grid.Row="4" Grid.Column="0" Orientation="Horizontal" Margin="0,4">
                <TextBlock Text="Highlighter" Width="100"/>
                <TextBox Text="{Binding Highlighter, UpdateSourceTrigger=PropertyChanged}"  Padding="3" Width="120"/>
            </StackPanel>

            <StackPanel Grid.Row="5" Grid.Column="0" Orientation="Horizontal" Margin="0,4">
                <TextBlock Text="Release" Width="100"/>
                <TextBox Text="{Binding Release, UpdateSourceTrigger=PropertyChanged}"  Padding="3" Width="120"/>
            </StackPanel>

            <StackPanel Grid.Row="6" Grid.Column="0" Orientation="Horizontal" Margin="0,4">
                <TextBlock Text="Draw Line" Width="100"/>
                <TextBox Text="{Binding DrawLine, UpdateSourceTrigger=PropertyChanged}"  Padding="3" Width="120"/>
            </StackPanel>


            <StackPanel Grid.Row="7" Grid.Column="0" Orientation="Horizontal" Margin="0,4">
                <TextBlock Text="Hide All" Width="100"/>
                <TextBox Text="{Binding HideAll, UpdateSourceTrigger=PropertyChanged}"  Padding="3" Width="120"/>
            </StackPanel>

            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="0,4">
                <TextBlock Text="Trash" Width="100"/>
                <TextBox Text="{Binding Trash, UpdateSourceTrigger=PropertyChanged}"  Padding="3" Width="120"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,4">
                <TextBlock Text="1x Brush Size" Width="100"/>
                <TextBox Text="{Binding BrushSize1x, UpdateSourceTrigger=PropertyChanged}"  Padding="3" Width="120"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="0,4">
                <TextBlock Text="2x Brush Size" Width="100"/>
                <TextBox Text="{Binding BrushSize2x, UpdateSourceTrigger=PropertyChanged}"  Padding="3" Width="120"/>
            </StackPanel>

            <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="0,4">
                <TextBlock Text="3x Brush Size" Width="100"/>
                <TextBox Text="{Binding BrushSize3x, UpdateSourceTrigger=PropertyChanged}"  Padding="3" Width="120"/>
            </StackPanel>

            <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" Margin="0,4">
                <TextBlock Text="Transparent Board" Width="100"/>
                <TextBox Text="{Binding TransparentBoard, UpdateSourceTrigger=PropertyChanged}"  Padding="3" Width="120"/>
            </StackPanel>

            <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal" Margin="0,4">
                <TextBlock Text="Whiteboard" Width="100"/>
                <TextBox Text="{Binding Whiteboard, UpdateSourceTrigger=PropertyChanged}"  Padding="3" Width="120"/>
            </StackPanel>

            <StackPanel Grid.Row="6" Grid.Column="1" Orientation="Horizontal" Margin="0,4">
                <TextBlock Text="Blackboard" Width="100"/>
                <TextBox Text="{Binding Blackboard, UpdateSourceTrigger=PropertyChanged}"  Padding="3" Width="120"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
