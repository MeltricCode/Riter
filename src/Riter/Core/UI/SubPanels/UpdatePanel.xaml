<UserControl x:Class="Riter.Core.UI.SubPanels.UpdatePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Riter.Core.UI.SubPanels"
             mc:Ignorable="d"
             Background="White"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="8 16" VerticalAlignment="Bottom">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Image Source="/Resources/RiterLogo.png" Width="40" Height="40" Grid.Column="0" VerticalAlignment="top"/>

        <StackPanel Grid.Column="1" Margin="10,0">
            <TextBlock Text="Riter App" FontSize="13" FontWeight="Bold"/>
            <TextBlock Text="0.2.15" FontSize="12" Foreground="Gray"/>
            <StackPanel Orientation="Horizontal" Margin="0 16 0 4">
                <TextBlock Text="Update available" FontSize="12" FontWeight="Medium"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="0.2.16" FontSize="12" Foreground="Blue" Cursor="Hand"/>
                <TextBlock Margin="8 0 0 0" VerticalAlignment="Center">
                    <Hyperlink NavigateUri="https://your-link.com">
                        View details
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Column="2" Orientation="Vertical" HorizontalAlignment="Right">
            <Button Content="Start Update" Width="90" Height="30" Margin="0,2"
                        Background="#F1F1F1" Foreground="Black" BorderBrush="Transparent"/>
        </StackPanel>
    </Grid>
</UserControl>
