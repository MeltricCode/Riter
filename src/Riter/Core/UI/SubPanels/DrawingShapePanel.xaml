                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{Binding ThemeViewModel.CurrentThemeBlueButtonStrokeHex}" />
                                    <Setter Property="Cursor" Value="Hand" />
                                </Trigger>

